<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/Style/basic.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
</head>
<body>
    <nav class="navbar bg-primary-basic px-5">
        <div class="d-grid grid-1-4">
            <a class="navbar-brand txt-bold" href="/">Navbar</a>
            <div class="d-flex just-end">

            </div>
        </div>
    </nav>

    <div>
        <div class="body-content d-grid grid-1-4">
            <div class="h-100vh bg-secondary-basic ps-5 pt-3 pe-1">
                <nav class="d-flex flex-column nav nav-pills">
                    <a class="navbar-brand nav-link py-2" aria-current="page" href="/home">Home</a>
                    <a class="navbar-brand nav-link py-2" aria-current="page" href="/products">Products</a>
                    <a class="navbar-brand nav-link py-2" aria-current="page" href="/about">About</a>
                    <a class="navbar-brand nav-link py-2" aria-current="page" href="/employee">Employee</a>
                </nav>
            </div>
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script>
        $(document).ready(function () {
            var navClass = $(".nav-link");
            var pathname = window.location.pathname;
            var pathArr = pathname.split("/");
            if (pathArr[1] == "" || pathArr[1] == "home") {
                navClass[0].classList.add("active");
            } else if (pathArr[1] == "products") {
                navClass[1].classList.add("active");
                return false
            } else if (pathArr[1] == "about") {
                navClass[2].classList.add("active");
                return false
            }
        })
    </script>

</body>
</html>